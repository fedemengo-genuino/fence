{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "types",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strictNullChecks": true,
    "target": "es2016"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "test/**/*"
  ]
}
